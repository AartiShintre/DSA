package com.RT.P2;

public class BinarySearch_Recursive {

	private static int RecersiveBinarySearch(int[] arr, int target, int left, int right) {
		int index = 0;
		if(left > right) {
			return -1;
		}
			int mid =(left + right) / 2;
			if(arr[mid] == target) {
				return mid;
			}
			else if( arr [mid] < target) {
			index =	RecersiveBinarySearch(arr, target, mid + 1, right);
			}
			else if(arr [mid] > target) {
				index = RecersiveBinarySearch(arr, target, left, mid - 1);
			}
			return index;
		}
	
	public static void main(String[] args) {
		int [] arr = {11, 22, 33, 44, 55, 66, 77};
		int target = 22;
		int res = RecersiveBinarySearch(arr, target, 0, arr.length-1);
		if(res != -1) {
			System.out.println("Found at index "+res);
		}else {
			System.out.println("Element not found");
		}

	}
}
